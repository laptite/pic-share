#edit_page.col-md-8.col-md-offset-2
	.row
		.panel.panel-default
			.panel-heading
				%h1 Profile

			.panel-body
				.container
					= simple_form_for @user, url: edit_profile_path, html: { multipart: true } do |f|
						.form-group
							= f.input :email, required: false, input_html: { class: 'form-control' }
						.form-group
							= f.input :handle, required: false, input_html: { class: 'form-control', rows: 4 }
						.form-group
							= f.label :avatar
							= f.file_field :avatar, as: :file
							- if @user.avatar.present?
								= image_tag @user.avatar.url(:thumb)
						%hr
						
						= f.button :submit, "Update", class: 'btn-info'

						= link_to "Delete Account", profile_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete your account?'}, class: 'btn btn-info'