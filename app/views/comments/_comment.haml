.comment
	.handle-wrapper
		.handle= link_to comment.pic.user.handle, profile_path(comment.pic.user)
		.title= comment.body

-# if user_signed_in?
	%p= link_to "Delete", post_comments_path(comment.post, comment.post_id), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?'}, class: 'button'
		