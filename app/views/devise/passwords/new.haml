.col-md-8
  .row
    .panel.panel-default
      .panel-body
        .container.col-sm-12
          %h3 Forgot your password?
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
            = f.error_notification
            .form-group
              = f.input :email, required: false, hint: "Send me reset password instructions", autofocus: true, input_html: { autocomplete: "email", class: 'form-control' }
            
            = f.button :submit, "Submit", class: 'btn-info'
          = render "devise/shared/links"
