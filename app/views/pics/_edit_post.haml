	= link_to 'Delete', pic_path(pic), method: :delete, data: { confirm: 'Are you sure you want to delete this Post?'}, class: 'edit-btn'
	-# FIXME -- Add new path since modal to data-dismiss refreshes page
	= link_to 'Cancel', '#', class: 'edit-btn', data: { dismiss: "modal-#{pic.id}" }
