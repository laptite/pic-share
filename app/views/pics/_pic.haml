.pic.box.panel{ id: "box-#{pic.id}" }
	.panel-heading
		%span.avatar-round= link_to (image_tag pic.user.avatar.url(:tiny)), profile_path(pic.user)
		.handle-wrapper
			.handle= link_to pic.user.handle, profile_path(pic.user)
			.title= link_to pic.title, pic
			= link_to edit_pic_path(pic) do
				- gray_klass = pic.user != current_user ? 'grayed-out' : ''
				%i.fas.fa-ellipsis-h{ class: gray_klass }
			=# link_to "Delete", pic_path(pic), method: :delete, data: { confirm: 'Are you sure you want to delete this Post?'}
	.panel-body
		= image_tag pic.image.url(:medium)
	
	.panel-footer
		.actions-wrapper
			- liked_klass = pic.likes.liked.present? ? 'fas' : 'far'
			= link_to toggle_like_pic_path(pic), method: :put, class: 'fa-heart-wrapper' do
				%i.fa-heart{ class: liked_klass }
		#comments
			= render pic.comments
			.time-ago= "#{time_ago_in_words(pic.created_at)} ago"
			= render partial: 'comments/form', locals: { pic: pic, id: pic.id }