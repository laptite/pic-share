= simple_form_for pic, html: { multipart: true } do |f|
	.form-group
		- f.label "Image"
		= f.file_field :image, as: :file
	.form-group
		= f.input :title, label: false, input_html: { class: 'form-control', placeholder: "Add comment..." }, required: false
	%hr
	= f.button :submit, "Save", class: 'btn btn-info'

	- unless pic.new_record?
		= link_to "Delete", pic_path(pic), method: :delete, data: { confirm: 'Are you sure you want to delete this post?'}, class: 'btn btn-danger'